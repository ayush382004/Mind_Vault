{
  "manifest_version": 3,
  "name": "MindVault Web Companion",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
